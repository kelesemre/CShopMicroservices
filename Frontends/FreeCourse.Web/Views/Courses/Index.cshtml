
@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card-title">
            <h5 class="card-title">
                Courses
            </h5>
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Course Name </th>
                            <th> Price </th>
                            <th> Duration </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>  </td>
                                <td> @item.Name </td>
                                <td> @item.Price </td>
                                <td> @item.Feature.Duration</td>
                                <td> Time </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Course Not Found
                </div>
            }
        </div>
    </div>
</div>

